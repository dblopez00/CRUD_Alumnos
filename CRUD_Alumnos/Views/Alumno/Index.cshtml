@model IEnumerable<CRUD_Alumnos.Models.Alumno>

@{
    ViewBag.Title = "DALS COLLEGE";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista Alumno de DALS COLLEGE</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Agregar")
</p>
<table class="table">
    <tr>
        <th>
            Nombre
        </th>
        <th>
            Apellido
        </th>
        <th>
            Edad
        </th>
        <th>
            Sexo
        </th>
        <th>
            Fecha de Registro
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
     {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Edad)
            </td>
            <td>
                @{
                    if (item.Sexo == "M")
                    {
                        <span>Masculino</span>
                    }
                    else
                    {
                        <span>Femenino</span>
                    }
                }
            </td>
            <td>
                @item.FechaRegistro.ToShortDateString()
            </td>
            <td>
                @Html.ActionLink("Editar", "Editar", new { id = item.ID }) |
                @Html.ActionLink("Detalles", "DetallesA", new { id = item.ID }) |
                @Html.ActionLink("Eliminar", "EliminarA", new { id = item.ID }, new { @class = "aElimina" })
            </td>
        </tr>
     }
</table>

@section scripts{
    <script>
        $(".aElimina").click(function (event) {
            if (!confirm('¿Estas seguro de quiere eliminar este Alumno?')) {
                event.preventDefault();
            }
        });
    </script>
}
